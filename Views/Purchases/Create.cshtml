@model TrainingUAJY.Models.Transaction

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Nama Barang: @Model.Computer.Title</h4>
        <h4>Deskripsi  : @Model.Computer.Description</h4>
        <h4>Harga      : @Model.Computer.Price.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("id-ID")),-</h4>
        <h4>Stok       : @Model.Computer.Stock Tersedia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, "Jumlah Pembelian", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Amount" name="Amount" type="number" value="">
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, "Catatan", htmlAttributes: new { @type = "text", @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Notes" name="Notes" type="text" value="">
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
